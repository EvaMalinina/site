.triangles{
  width: 100%;
  position: absolute;
  bottom: -2px;
  display: flex;

  &_last {
    top: -2px;
  }
}
.triangle{
  height: 120px;
  width: 50%; 
  stroke: white;

  @include desktop {
    height: 80px;
  }
  @include tablets {
    height: 50px;
  }
  @include phones {
    height: 25px;
  }
  &_last {
    height: 100px;

    @include desktop {
      height: 65px;
    }
    @include tablets{
      height: 40px;
    }
    @include phones {
      height: 20px;
    }
  }
}
