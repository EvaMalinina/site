.user {
  display: flex;
  flex-direction: column;
  align-items: center;

  &__desc {
    color: $lightgrey;
    font-size: 18px;
    font-weight: 300;
    margin-bottom: 45px;
    line-height: 30px;
  }
  &__name {
    text-align: center;
    color: $grey;
    font-size: 72px;
    font-weight: 800;
    line-height: 60px;
  }
}