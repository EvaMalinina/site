mixin icon(name, className)
  - var icon = require(`../../images/icons/${name}.svg`);
  svg(class=className viewBox=icon.viewBox preserveAspectRatio="none")
    use(xlink:href=icon.url)

mixin image(path, className)
  img(src=require(`../../images/${path}`) class=className)

mixin nav(className, items, activeItem)
  nav(class=`${className}`)
    ul(class=`${className}__list`)
      each item, ndx in items
        li(class=`${className}__item` + ((inx===activeItem) ? ` ${className}__item_active` : ''))    
          a(class=`${className}__link` href='#')= item

mixin socials(className, items)
  socials(class=`${className}`)
    ul(class=`${className}__list`)
      each item in items
        li(class=`${className}__item`)
          a(class=`${className}__link` href='#')
            +icon(`${item}`, 'socials__icon')

mixin projects(className, items)
  projects(class=`${className}`)
    ul(class=`${className}__list`)
      each item in items
        li(class=`${className}__item`)
          button(class=`${className}__btn` href='#')
            +image(`${item}.jpg`, 'works__img')
            .works__overlay

mixin skill-name(className, items)
  skill-name(class=`${className}`)
    ul(class=`${className}__list`)
      each item in items
        li(class=`${className}__item`)
          div(class=`${className}__name`)=item
