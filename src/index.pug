      section.fullscreen-section.works-section
        .container
          .works__title.title.title_fz36 My projects
          .works__block
            .works__pics
              .works__mainpic
                +image('content/4.jpg', 'works__img')
              +projects('works', ["content/1", "content/2", "content/3", "content/4"])
              .works__slider-buttons
                .works__button-up
                  +icon('arrow-down', 'arrow arrow_up')
                .works__button-down
                  +icon('arrow-down', 'arrow arrow_down')
              .works__number
                +image('content/4.png', 'works__img')
            .works__desc
              +skill-name('works-skills', ['HTML','CSS','JavaScript'])
              .works__title.title School website
              .works__text This girl was not learning web development somewhere, but at LoftSchool! 2 months only the most difficult trials and sleepless nights!
              a.works__link(href="#")
                .works__link-icon
                  +icon('link', 'works__link')
                .works__link-text Go to website
      .wrapper-last
        .triangles.triangles_last
          svg(preserveAspectRatio="none" viewBox="0 0 900 100" class="triangle triangle_last")
            polygon(points="0,0 900,0 900,100" fill="#ffffff")
          svg(preserveAspectRatio="none" viewBox="0 0 900 100" class="triangle triangle_last")
            polygon(points="0,0 900,0 0,100" fill="#ffffff")
        .container
          section.last-review
            .reviews
              .title.title_mb100.title_fz36 What people tell
              ul.reviews__slider
                li.reviews__slider-item
                  .reviews__quote
                    .reviews__quote-icon
                      +icon('quote', 'reviews__qicon')
                    .reviews__text This girl was not learning web development somewhere, but at LoftSchool! 4.5 months only the most difficult trials and sleepless nights!
                  .reviews__person
                    .reviews__person-pic
                      +image('content/dmitryi-kovalchuk.jpg', 'reviews__img')
                    .reviews__person-info
                      .reviews__person-name Kovalchuk Dmitry
                      .reviews__person-job Founder of LoftSchool 
                li.reviews__slider-item
                  .reviews__quote
                    .reviews__quote-icon
                      +icon('quote', 'reviews__qicon')
                    .reviews__text This girl was not learning web development somewhere, but at LoftSchool! 4.5 months only the most difficult trials and sleepless nights!
                  .reviews__person
                    .reviews__person-pic
                      +image('content/vladimir-sabantsev.jpg', 'reviews__img')
                    .reviews__person-info
                      .reviews__person-name Kovalchuk Dmitry
                      .reviews__person-job Founder of LoftSchool 
                .reviews__buttons 
                  .reviews__button
                    +icon('arrow-down', 'arrow arrow_left')
                  .reviews__button
                    +icon('arrow-down', 'arrow arrow_right')
          section.last-form
            .title.title_mb100 Contact me
            form.order-form(action="")
              .form__row
                label.form__block
                  .form__block-title Your name
                  input.form__input(type='text', name='name', placeholder='Ivan Ivanov', required='')
                  .form__img
                    +icon('user', 'form__icon')

                label.form__block
                  .form__block-title Your email
                  input.form__input(name='email', placeholder='userdotsenko@gmail.com', required='')
                  .form__img
                    +icon('envelope', 'form__icon')
              .form__row
                label.form__block
                  .form__block-title Message to letter
                  input.form__input(type='text', cols="10", wrap="hard", placeholder='I need a website.\n Would like to ask terms and price.')
                  .form__img
                    +icon('message', 'form__icon')
              input.form__button(id="send" type="submit" value='Send')
          
      footer.footer
        .container.footer__container
          .footer__left
            .footer__copyright
              .copyright Â© 2019 
            .footer__info
              .footer__autor 
                .autor__name Tetiana 
                  br
                  | Dotsenko
              .footer__text Web-developer
                br
                | personal website
          .footer__right
            .footer__nav
              +nav('nav-footer', ["Home", "About me", "Skills", "Experience", "Reviews", "Contact"], 0)
            .footer__blocks
              .footer__blocks-left
                .footer__text I made this site as part of my studies
                  
                  |  at the LoftSchool School of Online Education.
                .footer__socials
                  +socials('socials_rounded socials', ["insta", "vk", "github"])
              .footer__blocks-right
                .footer__text Always write the code as if 
                  |  it would be accompanied by a violent psychopath who knows where you live.
                .footer__autor-quote Martin Golding

        